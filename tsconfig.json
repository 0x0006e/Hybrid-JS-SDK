{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    // "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*.ts",
    "./examples/**/*.ts",
    "./types/index.d.ts"
  ],
  "typeRoots": ["./node_modules/@types", "./types"]
}
